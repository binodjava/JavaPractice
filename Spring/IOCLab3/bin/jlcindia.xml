	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- <bean id="hello" class="com.jlcindia.spring.Hello" /> -->
	 <bean id="hello" class="com.jlcindia.spring.Hello" scope="prototype" /> 

